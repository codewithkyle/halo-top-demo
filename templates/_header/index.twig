{% set pageSeg = craft.app.request.segments|first %}
<header-component eager-load-css="header-component" web-component>
    <nav>
        <a id="header-logo" href="{{ siteUrl }}">{{ "Halo Top"|t }}</a>
        <div>
            <a href="{{ siteUrl|trim('/') }}/shop" data-id="shop" class="{{ (pageSeg == 'shop' ? 'is-active') }}">{{ "Shop"|t }}</a>
            <a href="{{ siteUrl|trim('/') }}/pops" data-id="pops" class="{{ (pageSeg == 'pops' ? 'is-active') }}">{{ "Pops"|t }}</a>
            <a href="{{ siteUrl|trim('/') }}/dairy" data-id="dairy" class="{{ (pageSeg == 'dairy' ? 'is-active') }}">{{ "Dairy"|t }}</a>
            <a href="{{ siteUrl|trim('/') }}/dairy-free" data-id="dairy-free" class="{{ (pageSeg == 'dairy-free' ? 'is-active') }}">{{ "Dairy-Free"|t }}</a>
            <a rel="noopener" target="_blank" href="https://djinnjs.com/">{{ "DjinnJS"|t }}</a>
        </div>
    </nav>
</header-component>